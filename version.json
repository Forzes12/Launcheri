    def process_video_url(self, url: str) -> str:
        try:
            url = url.strip()
            print(f"–û–±—Ä–∞–±–æ—Ç–∫–∞ –≤–∏–¥–µ–æ URL: {url}")
            
            # –û–±—Ä–∞–±–æ—Ç–∫–∞ Google Drive —Å—Å—ã–ª–æ–∫
            if 'drive.google.com' in url:
                print("–û–±–Ω–∞—Ä—É–∂–µ–Ω–∞ Google Drive —Å—Å—ã–ª–∫–∞, –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏–µ...")
                direct_url = self.convert_google_drive_url(url)
                if direct_url:
                    print(f"–ü—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–Ω–∞—è —Å—Å—ã–ª–∫–∞: {direct_url}")
                    return direct_url
                else:
                    print("–ù–µ —É–¥–∞–ª–æ—Å—å –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞—Ç—å Google Drive —Å—Å—ã–ª–∫—É")
                    return self.get_reliable_video_url()
            
            # –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ –ø—Ä—è–º—ã–µ –≤–∏–¥–µ–æ —Ñ–∞–π–ª—ã
            if any(url.lower().endswith(ext) for ext in ['.mp4', '.avi', '.mkv', '.mov', '.wmv', '.flv', '.webm']):
                print(f"–ü—Ä—è–º–∞—è —Å—Å—ã–ª–∫–∞ –Ω–∞ –≤–∏–¥–µ–æ: {url}")
                return url
            
            # –î–ª—è –¥—Ä—É–≥–∏—Ö –æ–Ω–ª–∞–π–Ω –≤–∏–¥–µ–æ –ø—Ä–æ–±—É–µ–º –ø—Ä—è–º—É—é —Å—Å—ã–ª–∫—É
            print(f"–ò—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –æ—Ä–∏–≥–∏–Ω–∞–ª—å–Ω–∞—è —Å—Å—ã–ª–∫–∞: {url}")
            return url
            
        except Exception as e:
            print(f"–û—à–∏–±–∫–∞ –æ–±—Ä–∞–±–æ—Ç–∫–∏ –≤–∏–¥–µ–æ URL: {e}")
            return self.get_reliable_video_url()
    
    def convert_google_drive_url(self, url: str) -> str:
        """–ü—Ä–µ–æ–±—Ä–∞–∑—É–µ—Ç Google Drive —Å—Å—ã–ª–∫—É –≤ –ø—Ä—è–º—É—é —Å—Å—ã–ª–∫—É –¥–ª—è —Å–∫–∞—á–∏–≤–∞–Ω–∏—è"""
        try:
            # –ò–∑–≤–ª–µ–∫–∞–µ–º ID —Ñ–∞–π–ª–∞ –∏–∑ URL
            file_id = None
            if '/file/d/' in url:
                file_id = url.split('/file/d/')[1].split('/')[0]
            elif 'id=' in url:
                file_id = url.split('id=')[1].split('&')[0]
            
            if file_id:
                # –°–æ–∑–¥–∞–µ–º –ø—Ä—è–º—É—é —Å—Å—ã–ª–∫—É –¥–ª—è —Å–∫–∞—á–∏–≤–∞–Ω–∏—è
                direct_url = f"https://drive.google.com/uc?export=download&id={file_id}"
                print(f"–ü—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–Ω–∞—è Google Drive —Å—Å—ã–ª–∫–∞: {direct_url}")
                return direct_url
            else:
                print("–ù–µ —É–¥–∞–ª–æ—Å—å –∏–∑–≤–ª–µ—á—å ID —Ñ–∞–π–ª–∞ –∏–∑ Google Drive —Å—Å—ã–ª–∫–∏")
                return ""
                
        except Exception as e:
            print(f"–û—à–∏–±–∫–∞ –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è Google Drive —Å—Å—ã–ª–∫–∏: {e}")
            return ""
    
    def get_reliable_video_url(self) -> str:
        """–í–æ–∑–≤—Ä–∞—â–∞–µ—Ç –Ω–∞–¥–µ–∂–Ω—ã–µ —Ç–µ—Å—Ç–æ–≤—ã–µ –≤–∏–¥–µ–æ URL"""
        reliable_videos = [
            "https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4",
            "https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ElephantsDream.mp4", 
