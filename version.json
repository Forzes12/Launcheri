            # –û–±—Ä–∞–±–æ—Ç–∫–∞ URL –¥–ª—è –æ–±—ã—á–Ω—ã—Ö –≤–∏–¥–µ–æ
            processed_url = self.process_video_url(video_url)
            if not processed_url:
                print(f"–ù–µ —É–¥–∞–ª–æ—Å—å –æ–±—Ä–∞–±–æ—Ç–∞—Ç—å URL: {video_url}")
                return False
            
            print(f"–û–±—Ä–∞–±–æ—Ç–∞–Ω–Ω—ã–π URL: {processed_url}")
            
            # –°–æ–∑–¥–∞–µ–º QUrl
            url = QUrl(processed_url)
            if not url.isValid():
                print(f"–ù–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π URL: {processed_url}")
                return False
            
            # –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∏—Å—Ç–æ—á–Ω–∏–∫
            self.media_player.setSource(url)
            
            # –ü—Ä–æ–≤–µ—Ä—è–µ–º, –∑–∞–≥—Ä—É–∑–∏–ª–æ—Å—å –ª–∏ –≤–∏–¥–µ–æ
            if self.media_player.source().isEmpty():
                print("–ò—Å—Ç–æ—á–Ω–∏–∫ –≤–∏–¥–µ–æ –ø—É—Å—Ç –ø–æ—Å–ª–µ —É—Å—Ç–∞–Ω–æ–≤–∫–∏")
                return False
            
            print("–í–∏–¥–µ–æ —É—Å–ø–µ—à–Ω–æ –∑–∞–≥—Ä—É–∂–µ–Ω–æ –≤ –º–µ–¥–∏–∞–ø–ª–µ–µ—Ä")
            
            # –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –≥—Ä–æ–º–∫–æ—Å—Ç—å
            self.audio_output.setVolume(0.5)
            
            # –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –∑–∞–ø—É—Å–∫–∞–µ–º –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ –ø–æ—Å–ª–µ –∑–∞–≥—Ä—É–∑–∫–∏
            QTimer.singleShot(500, self.auto_play)
            
            return True
            
        except Exception as e:
            print(f"–ö—Ä–∏—Ç–∏—á–µ—Å–∫–∞—è –æ—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –≤–∏–¥–µ–æ: {e}")
            return False

    def is_youtube_url(self, url: str) -> bool:
        """–ü—Ä–æ–≤–µ—Ä—è–µ—Ç, —è–≤–ª—è–µ—Ç—Å—è –ª–∏ —Å—Å—ã–ª–∫–∞ YouTube —Å—Å—ã–ª–∫–æ–π"""
        youtube_domains = ['youtube.com', 'youtu.be', 'www.youtube.com']
        return any(domain in url.lower() for domain in youtube_domains)

