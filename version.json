            if not video_url or not video_url.strip():
                print("–ü—É—Å—Ç–æ–π URL –≤–∏–¥–µ–æ")
                return False
            
            # –ü—Ä–æ–≤–µ—Ä—è–µ–º, —è–≤–ª—è–µ—Ç—Å—è –ª–∏ —ç—Ç–æ YouTube —Å—Å—ã–ª–∫–æ–π
            if self.is_youtube_url(video_url):
