        # –ë–∞–∑–æ–≤—ã–µ —Å—Ç–∏–ª–∏
        app.setStyleSheet("""
            QMainWindow, QWidget {
                background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 rgba(15, 23, 42, 0.9), stop:1 rgba(30, 41, 59, 0.9));
                color: white;
            }
            QLabel {
                background: transparent;
                color: white;
            }
        """)

        loading_screen = LoadingScreen()
        launcher = GameLauncher()
