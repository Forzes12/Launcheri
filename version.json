                launcher.activateWindow()
            except Exception as e:
                print(f"–û—à–∏–±–∫–∞ –ø–æ–∫–∞–∑–∞ –ª–∞—É–Ω—á–µ—Ä–∞: {e}")
                launcher.show()

        loading_screen.loading_complete.connect(show_main_launcher)
        loading_screen.show()
        QTimer.singleShot(500, loading_screen.start_loading)
        
        result = app.exec()
        return result
        
    except Exception as e:
        print(f"–û—à–∏–±–∫–∞ –ø—Ä–∏ –∑–∞–ø—É—Å–∫–µ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è: {e}")
        QMessageBox.critical(None, "–ö—Ä–∏—Ç–∏—á–µ—Å–∫–∞—è –æ—à–∏–±–∫–∞", f"–ü—Ä–∏–ª–æ–∂–µ–Ω–∏–µ –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å –∑–∞–ø—É—â–µ–Ω–æ: {str(e)}")
        return 1

if __name__ == '__main__':
    sys.exit(main())
