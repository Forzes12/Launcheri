        try:
            steps = [
                (0, "–ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —è–¥—Ä–∞ —Å–∏—Å—Ç–µ–º—ã..."),
                (15, "–ó–∞–≥—Ä—É–∑–∫–∞ –≥—Ä–∞—Ñ–∏—á–µ—Å–∫–æ–≥–æ –¥–≤–∏–∂–∫–∞..."),
                (30, "–ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞..."),
                (45, "–ó–∞–≥—Ä—É–∑–∫–∞ –∏–≥—Ä–æ–≤–æ–π –±–∏–±–ª–∏–æ—Ç–µ–∫–∏..."),
                (60, "–û–ø—Ç–∏–º–∏–∑–∞—Ü–∏—è –ø—Ä–æ–∏–∑–≤–æ–¥–∏—Ç–µ–ª—å–Ω–æ—Å—Ç–∏..."),
                (75, "–ü—Ä–æ–≤–µ—Ä–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏–π..."),
                (85, "–§–∏–Ω–∞–ª—å–Ω–∞—è –Ω–∞—Å—Ç—Ä–æ–π–∫–∞..."),
                (95, "–ó–∞–≤–µ—Ä—à–µ–Ω–∏–µ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏...")
            ]
            
            for progress, status in steps:
                if not self._is_running:
                    return
                
                self.progress_updated.emit(progress)
                self.status_updated.emit(status)
                self.msleep(150)
            
            self.progress_updated.emit(100)
            self.status_updated.emit("–ì–æ—Ç–æ–≤–æ –∫ —Ä–∞–±–æ—Ç–µ!")
            self.finished.emit()
            
        except Exception as e:
            print(f"–û—à–∏–±–∫–∞ –≤ –ø–æ—Ç–æ–∫–µ –∑–∞–≥—Ä—É–∑–∫–∏: {e}")
            self.status_updated.emit("–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏")

    def stop_loading(self):
        self._is_running = False

